<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top1"
        android:layout_height="55dp"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@drawable/background2"
        android:elevation="30dp">


        <TextView
            android:shadowColor="#000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wissen"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/toolbar_title" />


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/motivo_denuncia_suporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Motivo:"
                android:layout_marginLeft="10sp"
                android:textSize="20sp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#363636">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="15sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:text="Evento não existe"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/obs_denuncia_suporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Observações:"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10sp"
                android:textSize="20sp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#363636">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:text="@string/large_text"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/ir_paraEvento_sup"
                android:layout_width="145sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:elevation="@dimen/elevation_high"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_arredondado"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_remove_red_eye_white_18dp"
                android:text="Exibir evento"/>


        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
