<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_height="55dp"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@drawable/background2"
        android:elevation="30dp">


        <TextView
            android:shadowColor="#000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/toolbar_title" />


    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:background="@drawable/background1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image_edit"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"

                    app:civ_border_color="@color/background"
                    app:civ_border_width="2dp" />

                <android.support.v7.widget.CardView
                    android:backgroundTint="#363636"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="1dp"
                                android:src="@drawable/ic_person_gold_48dp"
                                android:contentDescription="@string/imageview" />

                            <TextView
                                android:id="@+id/nome_titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/nome"
                                android:textColor="@color/lojinha"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/Edit_Nome"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:inputType="textCapWords"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#363636">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="1dp"
                                android:contentDescription="@string/imageview"
                                android:src="@drawable/ic_date_range_gold_48dp" />

                            <TextView
                                android:id="@+id/idade_titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/idade"
                                android:textColor="@color/lojinha"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/Edit_idade"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:inputType="number"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#363636">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="1dp"
                                android:contentDescription="@string/imageview"
                                android:src="@drawable/ic_smartphone_gold_48dp" />

                            <TextView
                                android:id="@+id/cel_titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/celular"
                                android:textColor="@color/lojinha"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/Edit_Celular"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:inputType="number"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#363636">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="1dp"
                                android:src="@drawable/ic_map_gold_48dp"
                                android:contentDescription="@string/imageview"/>

                            <TextView
                                android:id="@+id/cep_titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/cep"
                                android:textColor="@color/lojinha"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/Edit_Cep"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:inputType="number"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#363636">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="1dp"
                                android:src="@drawable/ic_map_gold_48dp"
                                android:contentDescription="@string/imageview"/>

                            <TextView
                                android:id="@+id/estado_titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/estado"
                                android:textColor="@color/lojinha"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/Edit_Estado"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:inputType="textCapWords"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#363636">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="1dp"
                                android:src="@drawable/ic_map_gold_48dp"
                                android:contentDescription="@string/imageview"/>

                            <TextView
                                android:id="@+id/cidade_titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/cidade"
                                android:textColor="@color/lojinha"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/Edit_Cidade"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:inputType="textCapWords"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#363636">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="1dp"
                                android:contentDescription="@string/imageview"
                                android:src="@drawable/ic_map_gold_48dp" />

                            <TextView
                                android:id="@+id/endereco_titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:text="Endereço"
                                android:textColor="@color/lojinha"
                                android:textSize="20dp" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/Edit_endereco"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:inputType="textEmailAddress"
                            android:textColor="#fff"
                            android:textSize="15dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#363636">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="1dp"
                                android:src="@drawable/ic_mail_gold_48dp"
                                android:contentDescription="@string/imageview"/>

                            <TextView
                                android:id="@+id/email_titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/e_mail"
                                android:textColor="@color/lojinha"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/Edit_email"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:inputType="textEmailAddress"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <Button
                    android:id="@+id/editar_perfil_btn_info"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="#fff"
                    android:elevation="@dimen/elevation_high"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_arredondado"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_save_white_18dp"
                    android:text="@string/salvar"/>



                <!--######################### Senha ########################################################################### -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:contentDescription="@string/imageview"
                        android:src="@drawable/ic_event_gold_48dp" />

                    <TextView
                        android:id="@+id/alterar_senha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toEndOf="@+id/imageView3"
                        android:text="@string/alterar_senha"
                        android:textColor="@color/lojinha"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/mostrar_senha"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/transparente"
                        android:drawableLeft="@drawable/ic_remove_red_eye_white_18dp"
                        android:elevation="@dimen/elevation_high"
                        android:padding="10dp"
                        android:text="@string/exibir_senha"
                        android:textColor="#fff" />

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#363636">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="1dp"
                                android:src="@drawable/ic_lock_gold_48dp"
                                android:contentDescription="@string/imageview"/>

                            <TextView
                                android:id="@+id/senha_old_titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/senha_atual"
                                android:textColor="@color/lojinha"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/senha_atual_EditText"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:inputType="textPassword"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!--################# Nova senha ############################# -->

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#363636">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="1dp"
                                android:src="@drawable/ic_lock_gold_48dp"
                                android:contentDescription="@string/imageview"/>

                            <TextView
                                android:id="@+id/senha_nova_titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/nova_senha"
                                android:textColor="@color/lojinha"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/senha_nova_EditText"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:inputType="textPassword"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <!--################# Nova senha confirmar ############################# -->

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#363636">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="1dp"
                                android:src="@drawable/ic_lock_gold_48dp"
                                android:contentDescription="@string/imageview"/>

                            <TextView
                                android:id="@+id/senha_nova_confirmar_Titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/corfirmar_nova_senha"
                                android:textColor="@color/lojinha"
                                android:textSize="20sp" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/senha_nova_confirmar_EditText"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:inputType="textPassword"
                            android:textColor="#fff"
                            android:textSize="15sp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <Button
                    android:id="@+id/editar_perfil_btn"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="#fff"
                    android:elevation="@dimen/elevation_high"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_arredondado"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_save_white_18dp"
                    android:text="@string/salvar"/>



            </LinearLayout>
        </ScrollView>

    </FrameLayout>


    <ImageButton
        android:id="@+id/editar_perfil_btn_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/save_button"
        android:background="@drawable/button_arredondado"
        app:layout_anchor="@id/profile_image_edit"
        app:layout_anchorGravity="bottom|end" />

</android.support.design.widget.CoordinatorLayout>